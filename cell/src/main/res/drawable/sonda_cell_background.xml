<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/sonda_neutral_light1"/>
            <corners android:radius="@dimen/sonda_border_radius_small"/>
        </shape>
    </item>
    <item  android:state_selected="true">
        <shape>
            <solid android:color="@color/sonda_neutral_light1"/>
            <corners android:radius="@dimen/sonda_border_radius_small"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/sonda_neutral_light1" />
            <solid android:color="@color/sonda_neutral_light"/>
            <corners android:radius="@dimen/sonda_border_radius_small"/>
        </shape>
    </item>
</selector>